journal = {Ecological Modelling},
keywords = {Climate variability,Ecosystem model,Fresh water inflow,Infauna,Nutrients,Salinity},
pages = {67--80},
publisher = {Elsevier B.V.},
title = {{Effects of climate-driven freshwater inflow variability on macrobenthic secondary production in Texas lagoonal estuaries: A modeling study}},
