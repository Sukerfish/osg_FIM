journal = {The American Naturalist},
month = {jan},
number = {2},
pages = {255--279},
publisher = {[University of Chicago Press, American Society of Naturalists]},
title = {{On the Relationship between Abundance and Distribution of Species}},
url = {http://www.jstor.org/stable/2461494},
