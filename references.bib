file = {:C\:/Users/Gymnothorax/Downloads/Freestone-et-al-2021-Ecology-Stronger-predation-intensity-impact-on-prey-communities-in-the-tropics.pdf:pdf},
issn = {19399170},
journal = {Ecology},
keywords = {Eastern Pacific Ocean,biotic interaction hypothesis,experimental macroecology,fish,invertebrates,latitudinal gradient,marine biogeography,predator–prey interactions,recruitment},
