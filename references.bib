issn = {1051-0761},
journal = {Ecological Applications},
keywords = {El Ni{\~{n}}o,climate change,functional group,local disturbance,marine heatwaves,multiple stressors,pulse disturbance,reef fish,thermal stress,trophic group},
month = {sep},
number = {6},
pages = {1--6},
pmid = {32167633},
title = {{Direct and indirect effects of climate change‐amplified pulse heat stress events on coral reef fish communities}},
