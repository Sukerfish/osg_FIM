issn = {19326203},
journal = {PLoS ONE},
number = {7},
pages = {2--4},
pmid = {18665231},
title = {{Temperature-dependent sex determination in fish revisited: Prevalence, a single sex ratio response pattern, and possible effects of climate change}},
