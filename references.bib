issn = {20457758},
journal = {Ecology and Evolution},
keywords = {B–C plots,beta diversity,space–time analysis,statistical power,temporal beta diversity,temporal beta diversity index,type I error},
number = {6},
pages = {3500--3514},
title = {{A temporal beta-diversity index to identify sites that have changed in exceptional ways in space–time surveys}},
volume = {9},
year = {2019}
}
