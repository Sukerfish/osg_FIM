journal = {Ecological Modelling},
keywords = {Ecosystem function,Extinction,Grazing,Resilience},
title = {{Revisiting the catastrophic die-off of the urchin Diadema antillarum on Caribbean coral reefs: Fresh insights on resilience from a simulation model}},
